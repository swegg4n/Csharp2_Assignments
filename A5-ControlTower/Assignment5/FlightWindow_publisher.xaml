<Window x:Class="Assignment5.FlightWindow_publisher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment5"
        mc:Ignorable="d" Height="316" Width="350">
    <Grid>
        <Button x:Name="Start" Content="Start" HorizontalAlignment="Left" Margin="10,0,0,10" Width="80" Height="30" VerticalAlignment="Bottom" Click="Start_Click"/>
        <ComboBox x:Name="ChangeRoute" Margin="95,0,95,10" Height="30" VerticalAlignment="Bottom" SelectionChanged="ChangeRoute_SelectionChanged" />
        <Button x:Name="Land" Content="Land" Margin="0,0,10,10" VerticalAlignment="Bottom" Height="30" HorizontalAlignment="Right" Width="80" Click="Land_Click"/>
        <Image Margin="10,10,10,50" Source="logos_spritesheet.jpg" Stretch="Fill"/>

    </Grid>
</Window>
